---
import BaseHead from "../components/BaseHead.astro"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import Content from "../components/Content.astro"
import { SITE_TITLE, SITE_DESCRIPTION } from "../config"

const _postsRes = await fetch("http://localhost:1337/api/blogs")

let _posts: Array<{
  id: number
  attributes: { title: string; richContent: string; [key: string]: any }
}> = []
if (_postsRes.status === 200) {
  _posts = (await _postsRes.json()).data
}
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <Content>
        <ul>
          {
            _posts.map((post) => (
              <>
                <li class="sm:flex mb-2 hidden">
                  <div class="img mr-2 flex-shrink-0">
                    <div
                      class="inner"
                      style={{
                        backgroundImage: `url(${post.attributes.heroImage})`,
                      }}
                    />
                  </div>
                  <div>
                    <a href={`/post/${post.id}`}>{post.attributes.title}</a>
                    <p>{post.attributes.description}</p>
                  </div>
                </li>
                <li class=" mb-2 sm:hidden small">
                  <a href={`/post/${post.id}`}>
                    <figure>
                      <img class="img" src={post.attributes.heroImage} />

                      <figcaption>
                        <p class="title">{post.attributes.title}</p>
                        <p class="text-ellipsis whitespace-nowrap overflow-hidden">
                          {post.attributes.description}
                        </p>
                      </figcaption>
                    </figure>
                  </a>
                </li>
              </>
            ))
          }
        </ul>
      </Content>
    </main>
    <Footer />
    <style>
      li {
        cursor: pointer;

        a {
          font-size: 1.7em;
          color: var(--text-color-1);
        }
      }

      .small {
        .img {
          width: 100%;
          height: unset;
        }

        .title {
          font-size: 1.2em;
          font-weight: 400;
        }

        figcaption {
          background-color: var(--background-mute);
          padding: 4px;
        }
      }
      .img {
        height: 120px;
        width: 180px;

        display: inline-block;

        overflow: hidden;

        .inner {
          height: 100%;
          width: 100%;

          background-position: center;
          background-size: contain;

          transition: transform 0.4s;
        }

        &.img:hover {
          .inner {
            transform: scale(1.5);
          }
        }
      }
    </style>
  </body>
</html>
